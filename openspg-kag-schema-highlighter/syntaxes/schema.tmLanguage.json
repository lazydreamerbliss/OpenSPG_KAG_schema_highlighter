{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OpenSPG KAG Schema",
	"patterns": [
		{
			"name": "meta.namespace.schema",
			"match": "^namespace\\s+([a-zA-Z_][a-zA-Z0-9_]*)"
		},
		{
			"name": "entity.type.schema",
			"match": "([A-Z][a-zA-Z0-9_]*)(\\s*\\(.*?\\))?\\s*:\\s*EntityType"
		},
		{
			"name": "concept.type.schema",
			"match": "([A-Z][a-zA-Z0-9_]*)(\\s*\\(.*?\\))?\\s*:\\s*ConceptType"
		},
		{
			"name": "property.schema",
			"match": "\\s*([a-zA-Z_][a-zA-Z0-9_]*)(\\s*\\(.*?\\))?\\s*:\\s*(Text|Integer|Date|EntityType|ConceptType)"
		},
		{
			"name": "relation.schema",
			"match": "\\s*relations:\\s*"
		},
		{
			"name": "relation.definition.schema",
			"match": "\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*([A-Z][a-zA-Z0-9_]*)"
		},
		{
			"name": "constraint.schema",
			"match": "\\s*constraint:\\s*([a-zA-Z_][a-zA-Z0-9_]*)"
		},
		{
			"name": "comment.schema",
			"begin": "\\s*###",
			"end": "$"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.schema",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.schema",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.schema",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.schema"
}